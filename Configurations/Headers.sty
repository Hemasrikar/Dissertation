%% Header and Footer

\RequirePackage{fancyhdr}
\RequirePackage[bottom,hang]{footmisc}
\RequirePackage{ifthen}

% Clear default header/footer
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{0pt}
\setlength{\footnotemargin}{6pt}

\renewcommand{\sectionmark}[1]{\markright{#1}}

% Footer: section name + page number on the right
\fancyfoot[R]{\rightmark\quad\thepage}
\fancyfoot[L]{}

% Remove inner margin offset for twoside documents
\fancyhfoffset[R]{0pt}
\fancyhfoffset[L]{0pt} 

% Document version in working stage (appears on left)
\ifthenelse{\isundefined{\DocStageOption}}{}{
  \ifthenelse{\equal{\DocStageOption}{working}}{
      \fancyfoot[L]{\small\GetDocumentVersion~-~\textit{\today}}%
  }{}
}

% Chapter-opening pages
\fancypagestyle{plain}{
  \fancyhf{}
  \fancyfoot[R]{\rightmark\quad\thepage}
  \renewcommand{\headrulewidth}{0pt}
}


